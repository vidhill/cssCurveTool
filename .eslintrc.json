{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Snap": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "arrow-spacing": [
            "error", {
              "before": true,
              "after": true
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
